{% form 'customer_login' %}
{% include 'form-errors-custom' %}

<fieldset ng-keypress="login($event)">
    <div class="form-group">
        <div class="row">
            <div class="col-md-12">
                <input class="form-control" ng-model="username" name="customer[user_name]" required placeholder="{{ 'customer.sign-in.user_name' | t }}" />
                {% comment %} <span class="text-danger" ng-show="!customer_login['customer[user_name]'].$pristine && customer_login['customer[user_name]'].$error.required">{{ 'common.required' | t }}</span> {% endcomment %}
                <span class="text-danger" ng-style="{'visibility': !customer_login['customer[user_name]'].$pristine && customer_login['customer[user_name]'].$error.required ? 'visible':'hidden'}">{{ 'common.required' | t }}</span>
            </div>
            <div class="col-md-12" style="margin-top:15px">
                <input class="form-control" ng-model="password" type="password" name="customer[password]" required placeholder="{{ 'customer.sign-in.password' | t }}" />
                {% comment %} <span class="text-danger" ng-show="!customer_login['customer[password]'].$pristine && customer_login['customer[password]'].$error.required">{{ 'common.required' | t }}</span> {% endcomment %}
                <span class="text-danger" ng-style="{'visibility': !customer_login['customer[password]'].$pristine && customer_login['customer[password]'].$error.required ? 'visible':'hidden'}">{{ 'common.required' | t }}</span>
            </div>
        </div>
    </div>

    {% if template != 'customers/login' %}
    <div class="form-group">
        {% include 'customers/forgot-links' %}
    </div>
    {% endif %}

    {% if template != 'customers/login' %}
    <div class="row">
        <div class="col-md-8">
            {% else %}
            <div class="form-group">
                {% endif %}
                <button class="btn btn-primary btn-block">{{ 'customer.sign-in.sign_in' | t }}</button>
                {% if template != 'customers/login' %}
            </div>
            {% endif %}
            {% if template != 'customers/login' %}
            <div class="col-md-4">
                {{ 'layout.customer.register' | t | customer_register_link | replace: 'a href', 'a class="btn btn-link" href' }}
            </div>
            {% endif %}
        </div>

        {% if template == 'customers/login' %}
        <div class="form-group">
            {% include 'customers/forgot-links' %}
        </div>
        {% endif %}
</fieldset>
{% endform %}
