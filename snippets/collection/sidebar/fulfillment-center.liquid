<div class="panel-default panel-static" uib-accordion-group template-url="collection-sidebar-always-visible-group.html" is-open="always">
    <uib-accordion-heading>
        {{ 'collections.general.availability' | t }}
    </uib-accordion-heading>
    <div ng-controller="inventoryController as $inventory">
        <a href="#" ng-click="selectFulfillmentCenter()">{{ 'collections.general.select_branch_title' | t }}</a> 
        {{ 'collections.general.select_branch_description' | t }}
        <form>
            <p>{{ 'collections.sidebar.search_within' | t }}</p>
            <div class="checkbox" ng-click="$collection.selectedBranch()">
                <input type="checkbox" ng-model="$collection.searchInBranch">
                <a vc-query-source="$collection.keywordQuery" switchable="false">
                    <span class="switch"></span>
                    <span class="name">In stock now at your brach</span>
                </a>
            </div>
        </form>
    </div>
    
</div>
